{
  "hosting": [
    {
      "site": "eventstorming-tool-db",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "site": "labs-msaez",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "site": "prod-msaez",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "headers": [
    {
      "source": "**/*.html", 
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "max-age=0, no-cache"
        }
      ]
    },
    {
      "source": "**/*.@(css|js)", 
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "max-age=0, no-cache"
        }
      ]
    },
    {
      "source": "**/*.@(jpg|jpeg|gif|png)", 
      "headers": [
        {
          "key": "Cache-Control", 
          "value": "max-age=3300"
        }
      ]
    }
  ]
}
